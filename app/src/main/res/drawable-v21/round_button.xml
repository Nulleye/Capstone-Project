<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="?android:attr/colorControlHighlight">
<item>
    <selector>
        <item android:state_pressed="false" android:state_checked="false">
            <shape android:shape="oval">
                <solid android:color="@color/colorButtonDisabled"/>
                <stroke android:color="@color/colorButtonDisabledDark" android:width="1dp"/>
            </shape>
        </item>
        <item>
            <shape android:shape="oval">
                <solid android:color="@color/colorAccent"/>
                <stroke android:color="@color/colorAccentDark" android:width="1dp"/>
            </shape>
        </item>
    </selector>
</item>
</ripple>